{
   "tasks": [
      {
         "type": "cppbuild",
         "label": "C/C++: g++ build active file",
         "command": "/usr/bin/g++",
         "args": [
            "-Iinclude/",
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}",
            "-O0",
            "-lGL",
            "-lGLU",
            "-lglut"
         ],
         "options": {
            "cwd": "${fileDirname}"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "detail": "Default build with c++ and freeglut."
      }
   ],
   "version": "2.0.0"
}